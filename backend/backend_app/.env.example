# Example environment variables for backend/backend_app
# Copy this to .env and fill values when running locally or in Docker.

# Database (SQLAlchemy-style DSN)
# Use the postgres service from docker-compose in most setups
DATABASE_URL=postgresql+psycopg://agentks:agentks_password@postgres:5432/agentks_db

# Ollama (local model runtime) -- adjust if using remote or different model names
OLLAMA_BASE_URL=http://ollama:11434
OLLAMA_CHAT_MODEL=llama3.1
OLLAMA_EMBED_MODEL=nomic-embed-text

# External data sources used by tools
SEARXNG_URL=http://searxng:8080
CDS_BASE_URL=https://cds.cern.ch
ARXIV_API_URL=http://export.arxiv.org/api/query
INSPIRE_BASE_URL=https://inspirehep.net

# PGVector collection names
COLLECTION_DOCS=kb_docs
COLLECTION_TOOLS=tool_catalog

# Optional tuning
TOOL_SELECT_TOPK=6
FETCH_TIMEOUT_SECONDS=25
